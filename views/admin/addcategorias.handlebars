<div class="container">
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}
    {{/each}}
    
    {{#if categoria._id}}
        <h2 class="mt-3">Editar categorias</h2>
    {{else}}
        <h2 class="mt-3">Nova categorias</h2>
    {{/if}}
    <div class="card">
        <div class="card-body">
            <form action="{{#if categoria._id}}/categorias/edit/{{else}}/categorias/nova{{/if}}" method="post">
                <input type="hidden" name="id" value="{{categoria._id}}">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control" value="{{categoria.nome}}">
                </div>

                <div class="form-group">
                    <label for="slug">Slag</label>
                    <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control" value="{{categoria.slug}}">
                </div>

                <div class="form-group">
                    {{#if categoria._id}}
                        <button type="submit" class="btn btn-info">Atualizar</button>
                    {{else}}
                        <button type="submit" class="btn btn-success">Adicionar</button>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>

</div>